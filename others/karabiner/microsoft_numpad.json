{
  "title": "Map Arrow Keys For Microsoft Number Pad",
  "maintainers": [
    "sazanamix"
  ],
  "rules": [
    {
      "description": "left_shift + keypads(1-9) -> arrow keys (You have to set keypad_num_lock to vk_none in Simple Modifications.)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_1",
            "modifiers": {
                "mandatory": [
                  "left_shift"
                ]
            }
          },
          "to": [
            {
              "key_code": "end"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_2",
            "modifiers": {
                "mandatory": [
                  "left_shift"
                ]
            }
          },
          "to": [
            {
                "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_3",
            "modifiers": {
                "mandatory": [
                  "left_shift"
                ]
            }
          },
          "to": [
            {
                "key_code": "page_down"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_4",
            "modifiers": {
                "mandatory": [
                  "left_shift"
                ]
            }
          },
          "to": [
            {
                "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_5",
            "modifiers": {
                "mandatory": [
                  "left_shift"
                ]
            }
          },
          "to": [
            {
                "key_code": "vk_none"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_6",
            "modifiers": {
                "mandatory": [
                  "left_shift"
                ]
            }
          },
          "to": [
            {
                "key_code": "right_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_7",
            "modifiers": {
                "mandatory": [
                  "left_shift"
                ]
            }
          },
          "to": [
            {
                "key_code": "home"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_8",
            "modifiers": {
                "mandatory": [
                  "left_shift"
                ]
            }
          },
          "to": [
            {
                "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_9",
            "modifiers": {
                "mandatory": [
                  "left_shift"
                ]
            }
          },
          "to": [
            {
                "key_code": "page_up"
            }
          ]
        }
      ]
    }
  ]
}